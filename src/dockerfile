FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .

ARG POSTGRESQL_USERNAME 
ARG POSTGRESQL_PASSWORD 
ARG POSTGRESQL_DATABASE
ARG PGPOOL_PORT_NUMBER
ARG USER_SERVICE_PORT_NUMBER

ENV POSTGRESQL_USERNAME=${POSTGRESQL_USERNAME} 
ENV POSTGRESQL_PASSWORD=${POSTGRESQL_PASSWORD} 
ENV POSTGRESQL_DATABASE=${POSTGRESQL_DATABASE}
ENV PGPOOL_PORT_NUMBER=${PGPOOL_PORT_NUMBER}
ENV USER_SERVICE_PORT_NUMBER=${USER_SERVICE_PORT_NUMBER}

RUN go build -o main .

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /app
COPY --from=builder /app/main .



EXPOSE 8080

CMD ["./main"]